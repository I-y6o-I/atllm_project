# API Gateway Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
SPRING_APP_NAME=api-gateway
SPRING_APP_PORT=8080

# ===========================================
# GRPC CLIENT CONFIGURATION
# ===========================================
# External gRPC services that should be running separately
# In production, these should point to your actual service endpoints
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=9092
USER_SERVICE_HOST=localhost
USER_SERVICE_PORT=9093
ARTICLE_SERVICE_HOST=localhost
ARTICLE_SERVICE_PORT=50051
LAB_SERVICE_HOST=localhost
LAB_SERVICE_PORT=9091
FEEDBACK_SERVICE_HOST=localhost
FEEDBACK_SERVICE_PORT=9090

# ===========================================
# GRPC CONNECTION SETTINGS
# ===========================================
GRPC_KEEP_ALIVE_TIME=30s
GRPC_KEEP_ALIVE_TIMEOUT=10s
GRPC_MAX_MESSAGE_SIZE=50MB
GRPC_NEGOTIATION_TYPE=plaintext

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_GRPC=INFO

# ===========================================
# ENVIRONMENT PROFILES
# ===========================================
# Options: default, docker, staging, production
PROFILE=docker