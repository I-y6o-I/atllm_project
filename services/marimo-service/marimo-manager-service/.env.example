# Server Configuration
SERVER_PORT=8084

# Database Configuration
# These variables are used to construct the spring.datasource.url
# Ensure the user and password match the postgres-marimo service configuration
POSTGRES_MARIMO_USER=marimo_user
POSTGRES_MARIMO_PASSWORD=password

# gRPC Service Dependencies
PYTHON_SERVICE_HOST=marimo-executor-service
PYTHON_SERVICE_PORT=9095

# Other Backend Service Dependencies (for potential future integrations)
AUTH_SERVICE_HOST=auth-service
AUTH_SERVICE_PORT=9092
USERS_SERVICE_HOST=users-service
USERS_SERVICE_PORT=9093
ARTICLES_SERVICE_HOST=articles-service
ARTICLES_SERVICE_PORT=50051
LABS_SERVICE_HOST=labs-service
LABS_SERVICE_PORT=9091

# MinIO Object Storage Configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=marimo

# Spring Boot Profile
SPRING_PROFILES_ACTIVE=docker